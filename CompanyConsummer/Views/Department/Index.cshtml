@model IEnumerable<EmployeeConsumer.Models.Department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h6>Nhập vào để tìm kiếm :</h6>

<div class="col-lg-12 col-md-12" style="margin-bottom:50px;">
    <div class="row">
        @using (Html.BeginForm("Index", "Department", FormMethod.Get, new { @class = "d-none d-sm-inline-block form-inline mr-auto ml-md-6 my-2 my-md-0 mw-100 navbar-search col-lg-4 col-md-4" }))
        {


            <div class="input-group">
                @Html.TextBox("Search", ViewBag.CurrentFilter as string, new { @class = "form-control bg-light border-1 small" })
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search fa-sm">Search</i>
                    </button>
                </div>

            </div>


        }
        <div class="col-lg-2 col-md-2"></div>
        <div class="col-lg-6 col-md-6">
            <a href="/Department/Create" style="float:right" class="btn btn-primary">Create</a>
        </div>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.DepartmentID }) |
            </td>
        </tr>
    }

</table>